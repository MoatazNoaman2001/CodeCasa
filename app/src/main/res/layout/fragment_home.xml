<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".presentation.home.HomeFragment">
    
    
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="40dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_weight="0.3"
                android:src="@drawable/img"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.6"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/home_card_background"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:textColor="@color/md_theme_light_onPrimary"
                    android:text="Do you Like To Take Simple Quiz?"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:id="@+id/subtext"
                    android:textColor="@color/md_theme_light_onPrimary"
                    android:text="take the test to find out"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/md_theme_light_onPrimary"/>
                
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:id="@+id/quizBtn"
                    android:layout_height="wrap_content"
                    android:text="Start now"
                    android:layout_marginTop="6dp"
                    android:drawableTint="@color/md_theme_light_onPrimary"
                    android:textColor="@color/md_theme_light_onPrimary"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:drawableStart="@drawable/round_play_arrow_24"
                    android:drawablePadding="4dp"/>
            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>